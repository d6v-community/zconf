{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
}